{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://liestudio/schemas/convert_request.json",
    "title": "Convert molecule input",
    "description": "Convert molecule representation",
    "type": "object",
    "properties": {
	"from_file": {
	    "type": "boolean",
	    "description": "Read molecule from file",
	    "default": "true"
	},
        "indy_path": {
            "type": "string",
            "description": "Path to Indigo installation",
            "default": "app/bin/indigo-python-1.3.0beta.r16-mac"
        },
        "rdk_path": {
            "type": "string",
            "description": "Path to RDKit installation",
            "default": "app/bin/RDkit"
        },
        "toolkit": {
            "type": "string",
            "description": "Default cheminformatics toolkit to use",
            "default": "pybel"
        },
        "mol": {
            "type": "string",
            "description": "Moleculare file"
        },
        "input_format": {
            "type": "string",
            "description": "Structure input file format"
        },
        "output_format": {
            "type": "string",
            "description": "Structure output file format"
        },
        "correctForPH": {
            "type": "boolean",
            "description": "Correct for pH when adding hydrogens to the structure",
            "default": false
        },
        "pH": {
            "type": "number",
            "description": "Target pH to correct for when adding hydrogens to the structure",
            "default": 7.4
        },
        "polaronly": {
            "type": "boolean",
            "description": "Only add polar hydrogens to the structure",
            "default": false
        },
        "forcefield": {
            "type": "string",
            "description": "Forcefield for small ligand optimization",
            "default": "mmff94"
        },
        "steps": {
            "type": "integer",
            "description": "Number of steps for optimization",
            "default": 50
        },
        "localopt": {
            "type": "boolean",
            "description": "Perform local optimization of the structure",
            "default": true
        },
	"workdir": {
	    "type": "string",
	    "default": "."
	}
    },
    "required": ["mol", "input_format", "output_format"]
}
