{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://mdstudio/schemas/filter_stable_request.json",
    "title": "Filter stable input",
    "description": "Use FFT and spline-based filtering to detect and extract stable regions",
    "type": "object",
    "properties": {
	"mdframe": {
	    "type": "string",
	    "description": "Path to the dataframe"
	},
	"do_plot": {
	    "type": "boolean",
	    "default": false
	},
	"do_filter": {
	    "type": "boolean",
	    "default": true
	},
	"plotFileType": {
	    "type": "string",
	    "default": "pdf"
	},
	"workdir": {
	    "type": "string",
	    "default": "."
	},
	"FilterSplines": {
	    "$ref": "resource://mdgroup/lie_pylie/filter_splines/v1"
	}
    },
    "required": ["mdframe"]
}

