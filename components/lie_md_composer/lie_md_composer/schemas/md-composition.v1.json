{
    "$schema": "http://json-schema.org/draft-04/schema",
    
    "definitions" :{
        "runControl" : 
        {
            "type": "object",
            "properties": {
                "integrator" : { "type": "string", "enum" : [ "leap-frog", "velocity-verlet", "stochastic-dynamics" ] },
                "startTime"  : { "type": "number",  "minimum" : 0.0 },
                "timeStep"   : { "type": "number",  "minimum" : 0.0, "exclusiveMinimum" : true },
                "steps"      : { "type": "integer", "minimum" : 0,   "exclusiveMinimum" : true }

            },
            "required":[ "integrator", "start_time", "time_step", "steps" ],
            "additionalProperties": false
        },
        "minimizeControl" : 
        {
            "type": "object",
            "properties": {
                "integrator" : { "type": "string",  "enum" : [ "steepest-descent", "conjugate-gradient" ] },
                "tolerance"  : { "type": "number",  "minimum" : 0.0, "exclusiveMinimum" : true },
                "stepSize"   : { "type": "number",  "minimum" : 0.0, "exclusiveMinimum" : true },
                "steps"      : { "type": "integer", "minimum" : 0,   "exclusiveMinimum" : true }
            },
            "required":[ "integrator", "tolerance", "stepSize", "steps" ],
            "additionalProperties": false
        },
        "centerOfMass" :
        {
            "type": "object",
            "properties": {
                "mode"       : { "type": "string",  "enum" : [ "linear", "angular", "none" ] },
                "frequency"  : { "type": "integer", "minimum" : 0 }
            },
            "required":[ "mode", "frequency" ],
            "additionalProperties": false
        },
        "output" :
        {
            "type": "object",
            "properties": {
                "positionFrequency" : { "type": "integer", "minimum" : 0 },
                "velocityFrequency" : { "type": "integer", "minimum" : 0 },
                "energyFrequency"   : { "type": "integer", "minimum" : 0 },
                "forceFrequency"    : { "type": "integer", "minimum" : 0 },
                "logFrequency"      : { "type": "integer", "minimum" : 0 },
                "atomIndices"       : { "type": "array", 
                                        "items" : { "type": "integer", "minimum" : 0 }, 
                                        "additionalItems" : false, 
                                        "minItems" : 1 }
            },
            "required":[ "mode", "frequency" ],
            "additionalProperties": false
        }

    },
    
    "type": "object",
    "description": "The proper format of a md compose message",
    "properties": {

    },
    "required":[
        "greeting",
        "sendTime"
    ],
    "additionalProperties": false
}