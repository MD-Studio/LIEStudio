{
    "$schema": "http://json-schema.org/draft-04/schema",
    
    "definitions" :{
        "run_control" : 
        {
            "type": "object",
            "properties": {
                "integrator" : { "type": "string", "enum" : [ "leap-frog", "velocity-verlet", "stochastic-dynamics" ] },
                "startTime"  : { "type": "number",  "minimum" : 0.0 },
                "timeStep"   : { "type": "number",  "minimum" : 0.0, "exclusiveMinimum" : true },
                "steps"      : { "type": "integer", "minimum" : 0,   "exclusiveMinimum" : true }

            },
            "required":[ "integrator", "start_time", "time_step", "steps" ],
            "additionalProperties": false
        },
        "minimize_control" : 
        {
            "type": "object",
            "properties": {
                "integrator" : { "type": "string", "enum" : [ "steepest-descent", "conjugate-gradient" ] },
                "timeStep"   : { "type": "number",  "minimum" : 0.0, "exclusiveMinimum" : true },
            },
            "required":[
                "greeting",
                "sendTime"
            ],
            "additionalProperties": false
        }
    },
    
    "type": "object",
    "description": "The proper format of a md compose message",
    "properties": {
        "greeting": {
            "type": "string",
            "description": "The message you will use to greet the Echo component"
        },
        "sendTime": {
            "type": "string",
            "format": "date-time",
            "description": "The datetime at which your greeting was sent"
        }
    },
    "required":[
        "greeting",
        "sendTime"
    ],
    "additionalProperties": false
}