{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "UpdateRequest",
    "type": "object",
    "properties": {
        "collection": {
            "$ref": "wamp://liestudio.schema.get/db/collection/v1.json"
        },
        "query": {
            "type":"object",
            "properties": {
                "filter": {
                    "type": "object"
                },
                "update": {
                    "type": "object"
                },
                "upsert": {
                    "type": "boolean",
                    "default": false
                }
            },
            "required": ["filter", "update"],
            "additionalProperties": false
        }
    },
    "required": ["collection", "query"],
    "additionalProperties": false
}