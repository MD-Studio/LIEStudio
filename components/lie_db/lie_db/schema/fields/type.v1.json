{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "FieldType",
    "type": "object",
    "description": "List of keys of fields",
    "oneOf": [
        {
            "description": "Dot (.) indexed strings that specifies field keys",
            "type": "string"
        },
        {
            "description": "Array of keys that index a field",
            "type": "string",
            "pattern": "^[^\\.]*$"
        }
    ]
}