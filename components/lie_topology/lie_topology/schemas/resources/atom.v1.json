{
    "$schema": "http://json-schema.org/draft-04/schema",

    "type": "object",
    "description": "The proper format of an atom",
    "properties": {
        "UID": {
            "type": "string",
            "description": "unique identifier"
        },
        "name": {
            "type": "string",
            "description": "atom name",
            "minLength": 1,
            "maxLength": 4
        },
        "reference" :
        {
            "type": "integer",
            "description": "reference number often used in structure formats"
        },
        "element": {
            "type": "string",
            "description": "element of the atom",
            "enum" : ["H" ,"He","Li","Be","B" ,"C" ,"N" ,"O" ,"F" ,"Ne",
                      "Na","Mg","Al","Si","P" ,"S" ,"Cl","Ar","K" ,"Ca",
                      "Sc","Ti","V" ,"Cr","Mn","Fe","Co","Ni","Cu","Zn",
                      "Ga","Ge","As","Se","Br","Kr","Rb","Sr","Y" ,"Zr",
                      "Nb","Mo","Tc","Ru","Rh","Pd","Ag","Cd","In","Sn",
                      "Sb","Te","I" ,"Xe","Cs","Ba","La","Ce","Pr","Nd",
                      "Pm","Sm","Eu","Gd","Tb","Dy","Ho","Er","Tm","Yb",
                      "Lu","Hf","Ta","W" ,"Re","Os","Ir","Pt","Au","Hg",
                      "Tl","Pb","Bi","Po","At","Rn","Fr","Ra","Ac","Th",
                      "Pa","U" ,"Np","Pu","Am","Cm","Bk","Cf","Es","Fm",
                      "Md","No","Lr","Rf","Db","Sg","Bh","Hs","Mt"]
        },
        "sybyl": {
            "type": "string",
            "description": "sybyl type",
            "enum": [ "H","C.1","C.2","C.3","C.ar",
                      "N.1","N.2","N.3","N.pl3","N.am","N.ar",
                      "O.2","O.3","O.co2","S.2","S.3","S.o","S.o2","P.3",
                      "He","Li","Be","B", "F" ,"Ne",
                      "Na","Mg","Al","Si","Cl","Ar","K" ,"Ca",
                      "Sc","Ti","V" ,"Cr","Mn","Fe","Co","Ni","Cu","Zn",
                      "Ga","Ge","As","Se","Br","Kr","Rb","Sr","Y" ,"Zr",
                      "Nb","Mo","Tc","Ru","Rh","Pd","Ag","Cd","In","Sn",
                      "Sb","Te","I" ,"Xe","Cs","Ba","La","Ce","Pr","Nd",
                      "Pm","Sm","Eu","Gd","Tb","Dy","Ho","Er","Tm","Yb",
                      "Lu","Hf","Ta","W" ,"Re","Os","Ir","Pt","Au","Hg",
                      "Tl","Pb","Bi","Po","At","Rn","Fr","Ra","Ac","Th",
                      "Pa","U" ,"Np","Pu","Am","Cm","Bk","Cf","Es","Fm",
                      "Md","No","Lr","Rf","Db","Sg","Bh","Hs","Mt"]
        },
        "occupancy" : 
        {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "crystallographic occupancy"
        },
        "bFactor" : 
        {
            "type": "number",
            "minimum": 0.0,
            "description": "crystallographic b-factor"
        },
        "mass" :
        {
            "type": "number",
            "minimum": 0.0,
            "description": "atomic mass (amu)"
        },
        "partialCharge" :
        {
            "type": "number",
            "description": "radial charge (e)"
        },
        "chargeGroup" :
        {
            "type": "integer",
            "minimum" : 0,
            "description": "molecular charge group index"
        },
        "vdwType" :
        {
            "$ref": "#/definitions/TODO"
        }
    },
    "required": [ "UID", "name" ],
    "additionalProperties": false
}