{
    "$schema": "http://json-schema.org/draft-04/schema",
    "type": "object",
    "description": "The proper format of molecular fragment",
    "properties": {
        "uid": {
            "type": "string",
            "description": "unique identifier"
        },
        "name": {
            "type": "string",
            "description": "fragment name",
            "minLength": 1,
            "maxLength": 4
        },
        "reference": {
            "type": "integer",
            "description": "reference number often used in structure formats"
        },
        "atoms": {
            "type": "array",
            "description": "list of atoms associated with this fragment",
            "minItems": 1,
            "items": [
                {
                    "$ref": "resource://mdstudio/topology/fragment/v1"
                }
            ],
            "additionalItems": false
        },
        "bonds": {
            "type": "array",
            "description": "list of bonds associated with this fragment",
            "minItems": 1,
            "items": [
