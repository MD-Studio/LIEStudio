{
    "$schema": "http://json-schema.org/draft-04/schema",
    "type": "object",
    "description": "The proper format of an atom reference",
    "properties": {
        "type": {
            "type": "string",
            "description": "table type",
            "enum": [
                "bond",
                "angle",
                "dihedral",
                "improper",
                "charge",
                "vdw"
            ]
        },
        "uid": {
            "type": "string",
            "description": "unique identifier"
        }
    },
    "required": [
        "molecule",
        "fragment",
        "atom"
    ],
    "additionalProperties": false
}