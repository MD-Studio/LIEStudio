{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "User",
    "type": "object",
    "properties": {
        "username": {
            "type": "string", "pattern": "^[a-zA-Z0-9_]+$"
        },
        "email": {
            "type": "string", "format": "email"
        },
        "password": {
            "type": "string"
        },
        "role": {
            "type": "string", "default": "user"
        },
        "uid": {
            "type": "number"
        }
    }
}