python3 /app/docker/progress.py
alias livedocs="(cd /app/docs; /usr/bin/make livehtml)"
alias serve="(cd /app/app; /usr/bin/gulp serve)"
alias compile="(cd /app/app; /usr/bin/gulp compile)"
alias helpme='(/app/docker/welcome.sh; [[ "$USERMODE" == "1" ]] && /app/docker/welcome-user.sh; echo "")'
alias lietest="(cd /app; green lietest.py)"
alias liecov="(cd /app; coverage run lietest.py && coverage html)"
alias liebandit="(cd /app; bandit -r components/ -f html -o build/bandit/index.html)"
alias liedocs="(cd /app/docs; /usr/bin/make html)"
alias liecheck="(cd /app; mkdir -p build/ build/flake8; flake8 components; pepper8 -o /app/build/flake8/index.html build/flake8/output.out)"
alias liepep8="(cd /app; autopep8 --in-place --aggressive --aggressive --recursive --ignore E501,E24 --exclude="*.md" *.py)"

source /app/.venv/bin/activate
export MONGO_HOST=mongo
export IS_DOCKER=1
export PIPENV_VENV_IN_PROJECT=1
cd /app
[[ "$HELPSHOWN" != "1" ]] && helpme
