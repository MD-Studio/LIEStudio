{
    "version": 2,
    "controller": {
      "id": "lienode01",
      "options": {
         "title": "liestudio-controller"
      }
    },
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "liestudio",
                    "roles": [
                        {
                            "name": "public",
                            "authorizer": "liestudio.authorizer.authorize"
                        },
                        {
                            "name": "authenticator",
                            "authorizer": "liestudio.authorizer.authorize"
                        },
                        {
                            "name": "authorizer",
                            "permissions": [
                                {
                                    "uri": "liestudio.authorizer",
                                    "match": "prefix",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                },
                                {
                                    "uri": "liestudio.authenticator.namespaces",
                                    "match": "exact",
                                    "allow":{
                                        "call": true,
                                        "register": false,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose":{
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        },
                        {
                            "name": "db",
                            "authorizer": "liestudio.authorizer.authorize"
                        },
                        {
                            "name": "schema",
                            "authorizer": "liestudio.authorizer.authorize"
                        },
                        {
                            "name": "admin",
                            "authorizer": "liestudio.authorizer.authorize"
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../../app/dist"
                        },
                        "dashboard": {
                            "type": "static",
                            "directory": "../../app/dist/index.html"
                        },
                        "docking": {
                            "type": "static",
                            "directory": "../../app/dist/index.html"
                        },
                        "log": {
                            "type": "static",
                            "directory": "../../app/dist/index.html"
                        },
                        "login": {
                            "type": "static",
                            "directory": "../../app/dist/index.html"
                        },
                        "md": {
                            "type": "static",
                            "directory": "../../app/dist/index.html"
                        },
                        "node_modules": {
                            "type": "static",
                            "directory": "../../app/node_modules"
                        },
                        "bower_components": {
                            "type": "static",
                            "directory": "../../app/bower_components"
                        },
                        "help": {
                            "type": "static",
                            "directory": "../../docs/html"
                        },
                        "ws": {
                            "type": "websocket",
                            "auth": {
                                "anonymous": {
                                    "type": "static",
                                    "role": "public"
                                },
                                "ticket": {
                                    "type": "dynamic",
                                    "authenticator": "liestudio.authenticator.login"
                                },
                                "wampcra": {
                                    "type": "dynamic",
                                    "authenticator": "liestudio.authenticator.login"
                                }
                            }
                        }
                    }
                }
            ],
            "components": [
                {
                    "type": "class",
                    "classname": "lie_authorizer.wamp_services.AuthorizerWampApi",
                    "realm": "liestudio",
                    "role": "authorizer"
                },
                {
                    "type": "class",
                    "classname": "lie_schema.wamp_services.SchemaWampApi",
                    "realm": "liestudio",
                    "role": "schema"
                },
                {
                    "type": "class",
                    "classname": "lie_db.wamp_services.DBWampApi",
                    "realm": "liestudio",
                    "role": "db"
                },
                {
                    "type": "class",
                    "classname": "lie_authenticator.wampapi",
                    "realm": "liestudio",
                    "role": "authenticator"
                }
            ]   
        },
        {
            "type": "container",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "components": [
              {
                "type": "wamplet",
                "package": "lie_config",
                "realm": "liestudio",
                "entrypoint": "wamp_services",
                "extra": {
                  "package_config": "../settings.json",
                  "authid": "lieadmin",
                  "password": "liepw@#",
                  "authmethod": "ticket"  
                },
                "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "localhost",
                     "port": 8080
                  },
                  "url": "ws://localhost:8080/ws"
                }
              },
              {
                "type": "wamplet",
                "package": "lie_logger",
                "realm": "liestudio",
                "entrypoint": "wamp_services",
                "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "localhost",
                     "port": 8080
                  },
                  "url": "ws://localhost:8080/ws"
                },
                "extra": {
                  "authid": "lieadmin",
                  "password": "liepw@#",
                  "authmethod": "ticket"  
                }
              },
              {
                "type": "wamplet",
                "package": "lie_structures",
                "realm": "liestudio",
                "entrypoint": "wamp_services",
                "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "localhost",
                     "port": 8080
                  },
                  "url": "ws://localhost:8080/ws"
                },
                "extra": {
                  "authid": "lieadmin",
                  "password": "liepw@#",
                  "authmethod": "ticket"  
                }
              },
              {
                "type": "wamplet",
                "package": "lie_atb",
                "realm": "liestudio",
                "entrypoint": "wamp_services",
                "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "localhost",
                     "port": 8080
                  },
                  "url": "ws://localhost:8080/ws"
                },
                "extra": {
                  "authid": "lieadmin",
                  "password": "liepw@#",
                  "authmethod": "ticket"  
                }
              }
            ]
        },
        {
            "type": "container",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "components": [
              {
                "type": "wamplet",
                "package": "lie_plants_docking",
                "realm": "liestudio",
                "entrypoint": "wamp_services",
                "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "localhost",
                     "port": 8080
                  },
                  "url": "ws://localhost:8080/ws"
                },
                "extra": {
                  "authid": "lieadmin",
                  "password": "liepw@#",
                  "authmethod": "ticket"  
                }
              },
              {
                "type": "wamplet",
                "package": "lie_md",
                "realm": "liestudio",
                "entrypoint": "wamp_services",
                "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "localhost",
                     "port": 8080
                  },
                  "url": "ws://localhost:8080/ws"
                },
                "extra": {
                  "authid": "lieadmin",
                  "password": "liepw@#",
                  "authmethod": "ticket"  
                }
              }
            ]
        }
    ]
}
