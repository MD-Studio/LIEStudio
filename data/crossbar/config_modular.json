{
    "version": 2,
    "controller": {
      "id": "lienode01",
      "options": {
         "title": "liestudio-controller"
      }
    },
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "liestudio",
                    "roles": [
                        {
                            "name": "public",
                            "authorizer": "liestudio.auth.authorize"
                        },
                        {
                            "name": "auth",
                            "permissions": [
                                {
                                    "uri": "liestudio.auth",
                                    "match": "prefix",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                },
                                {
                                    "uri": "liestudio",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": false,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                },
                                {
                                    "uri": "wamp",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "subscribe": true
                                    }
                                }
                            ]
                        },
                        {
                            "name": "db",
                            "authorizer": "liestudio.auth.authorize"
                        },
                        {
                            "name": "schema",
                            "authorizer": "liestudio.auth.authorize"
                        },
                        {
                            "name": "admin",
                            "authorizer": "liestudio.auth.authorize"
                        },
                        {
                            "name": "logger",
                            "authorizer": "liestudio.auth.authorize"
                        },
                        {
                            "name": "user",
                            "authorizer": "liestudio.auth.authorize"
                        },
                        {
                            "name": "oauthclient",
                            "authorizer": "liestudio.auth.authorize"
                        }
                    ],
                    "store": {
                        "type": "memory",
                        "event-history": [
                            {
                                "uri": "liestudio.db.events.online",
                                "limit": 1
                            },
                            {
                                "uri": "liestudio.schema.events.online",
                                "limit": 1
                            }
                        ]
                    }
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080,
                        "tls": {
                            "key": "data/crossbar/server_key.pem",
                            "certificate": "data/crossbar/server_cert.pem",
                            "dhparam": "data/crossbar/dhparam.pem",
                            "ciphers": "ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AES:RSA+3DES:!ADH:!AECDH:!MD5:!DSS"
                        }
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../../app/dist"
                        },
                        "dashboard": {
                            "type": "static",
                            "directory": "../../app/dist/index.html"
                        },
                        "docking": {
                            "type": "static",
                            "directory": "../../app/dist/index.html"
                        },
                        "log": {
                            "type": "static",
                            "directory": "../../app/dist/index.html"
                        },
                        "login": {
                            "type": "static",
                            "directory": "../../app/dist/index.html"
                        },
                        "md": {
                            "type": "static",
                            "directory": "../../app/dist/index.html"
                        },
                        "node_modules": {
                            "type": "static",
                            "directory": "../../app/node_modules"
                        },
                        "bower_components": {
                            "type": "static",
                            "directory": "../../app/bower_components"
                        },
                        "help": {
                            "type": "static",
                            "directory": "../../docs/html"
                        },
                        "ws": {
                            "type": "websocket",
                            "auth": {
                                "anonymous": {
                                    "type": "static",
                                    "role": "public"
                                },
                                "ticket": {
                                    "type": "dynamic",
                                    "authenticator": "liestudio.auth.login"
                                },
                                "wampcra": {
                                    "type": "dynamic",
                                    "authenticator": "liestudio.auth.login"
                                }
                            }
                        }
                    }
                }
            ],
            "components": [
                {
                    "type": "wamplet",
                    "package": "lie_auth",
                    "entrypoint": "wamp_services",
                    "realm": "liestudio",
                    "role": "auth"
                },
                {
                    "type": "wamplet",
                    "package": "lie_db",
                    "entrypoint": "wamp_services",
                    "realm": "liestudio",
                    "role": "db"
                },
                {
                    "type": "wamplet",
                    "package": "lie_schema",
                    "entrypoint": "wamp_services",
                    "realm": "liestudio",
                    "role": "schema"
                },
                {
                    "type": "wamplet",
                    "package": "lie_logger",
                    "entrypoint": "wamp_services",
                    "realm": "liestudio",
                    "role": "logger"
                }
            ]   
        }
    ]
}
