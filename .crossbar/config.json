{
    "version": 2,
    "controller": {
      "id": "lienode1",
      "options": {
         "title": "liestudio-controller"
      }
    },
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "liestudio",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "/Users/mvdijk/Documents/WorkProjects/liestudio-master/liestudio/app/dist"
                        },
                        "help": {
                            "type": "static",
                            "directory": "/Users/mvdijk/Documents/WorkProjects/liestudio-master/liestudio/docs/html"
                        },
                        "ws": {
                            "type": "websocket"
                        }
                    }
                }
            ]
        },
        {
            "type": "container",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "components": [
              {
                "type": "wamplet",
                "package": "lie_user",
                "realm": "liestudio",
                "entrypoint": "wamp_services",
                "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "127.0.0.1",
                     "port": 8080
                  },
                  "url": "ws://127.0.0.1:8080/ws"
                }
              },
              {
                "type": "wamplet",
                "package": "lie_config",
                "realm": "liestudio",
                "entrypoint": "wamp_services",
                "extra": {
                  "config": "/Users/mvdijk/Documents/WorkProjects/liestudio-master/liestudio/data/settings.json"
                },
                "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "127.0.0.1",
                     "port": 8080
                  },
                  "url": "ws://127.0.0.1:8080/ws"
                }
              },
              {
                "type": "wamplet",
                "package": "lie_logger",
                "realm": "liestudio",
                "entrypoint": "wamp_services",
                "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "127.0.0.1",
                     "port": 8080
                  },
                  "url": "ws://127.0.0.1:8080/ws"
                }
              },
              {
                "type": "wamplet",
                "package": "lie_docking",
                "realm": "liestudio",
                "entrypoint": "wamp_services",
                "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "127.0.0.1",
                     "port": 8080
                  },
                  "url": "ws://127.0.0.1:8080/ws"
                }
              }
            ]
        }
    ]
}
