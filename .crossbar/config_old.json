
{
  "version": 2,
  "controller": {
    "id": "lienode01",
    "options": {
        "title": "liestudio-node-controller"
    }
  },
  "workers": [
    {
      "type": "router",
      "options": {
          "pythonpath": [".."]
      },
      "realms": [
        {
          "name": "liestudio",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "*",
                  "cache": true,
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  }
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
            "type": "web",
            "endpoint": {
                "type": "tcp",
                "port": 8083,
                "tls": {
                    "certificate": "server.crt",
                    "key": "server.key",
                    "dhparam": "dhparam"
                }
            },
            "paths": {
                "/": {
                    "type": "static",
                    "directory": "/Users/mvdijk/Documents/WorkProjects/liestudio-master/liestudio/app/dist"
                },
                "help": {
                    "type": "static",
                    "directory": "/Users/mvdijk/Documents/WorkProjects/liestudio-master/liestudio/docs/html"
                },
                "ws": {
                    "type": "websocket",
                    "url": "wss://localhost:8083/ws"
                }
            }
        }
      ],
      "components": [
        {
          "type": "wamplet",
          "package": "lie_docking",
          "realm": "liestudio",
          "entrypoint": "wamp_services"
        },
        {
          "type": "class",
          "realm": "liestudio",
          "classname": "lie_user.UserWampApi"
        },
        {
          "type": "class",
          "realm": "liestudio",
          "classname": "lie_logger.LoggerWampApi"
        }
      ]
    },
    {
      "type": "container",
      "options": {
          "pythonpath": [".."]
      },
      "components": [
        {
          "type": "wamplet",
          "package": "lie_docking",
          "realm": "liestudio",
          "entrypoint": "wamp_services",
          "transport": {
            "type": "websocket",
            "endpoint": {
               "type": "tcp",
               "host": "localhost",
               "port": 8083,
               "tls": {
                   "hostname": "localhost",
                   "ca_certificates": [
                       "intermediate.cert.pem",
                       "ca.cert.pem"
                   ]
               }
            },
            "url": "wss://localhost:8083/ws"
            }
        }
      ]
    },
    {
      "type": "container",
      "options": {
          "pythonpath": [".."]
      },
      "components": [
        {
          "type": "wamplet",
          "package": "lie_docking",
          "realm": "liestudio",
          "entrypoint": "wamp_services",
          "transport": {
            "type": "websocket",
            "endpoint": {
               "type": "tcp",
               "host": "localhost",
               "port": 8083,
               "tls": {
                   "hostname": "localhost",
                   "ca_certificates": [
                       "intermediate.cert.pem",
                       "ca.cert.pem"
                   ]
               }
            },
            "url": "wss://localhost:8083/ws"
            }
        }
      ]
    }
  ]
}